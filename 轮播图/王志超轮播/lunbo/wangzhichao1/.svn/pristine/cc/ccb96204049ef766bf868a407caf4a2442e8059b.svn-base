@charset "utf-8";
/* CSS Document */
html,body{
	height:100%;
}
body{
	display: flex;
	justify-content: space-between;
	flex-flow: column;
}



.header{
	width:16.0rem;
	height:2.048rem;
    background:#b81c22;
}	
 .header .left{
	width: 0.853333rem;
	height:0.853333rem;
	position: absolute;
	top:0.554667rem;
	left:0.938667rem;
}	
 .header .right{
	width:0.938667rem;
	height:0.725333rem;
	position: absolute;
	top:0.682667rem;
	right:0.426667rem;
}		
 .header input{
	width:13.610667rem;
	height:1.152rem;
	margin-top: 0.426667rem;
	margin-left:0.64rem;
	border-radius:0.213333rem;
}
.main{
	flex: 1;
	overflow-y: scroll;
	height:100%;
	
}			
.main .banner{
	width:16.0rem;
	height:11.776rem;
	background: url(../images/0.jpg) no-repeat center center;
	background-size: 100% 100%;
}		
.main .tu1{
	width:16.0rem;
	height:1.749333rem;
}
.main .tu1 img{
	width:100%;
	height:100%;
}			
.main .tu2{
	width:16.0rem;
	height:1.28rem;
}			
.main .tu2 img{
	width:100%;
	height:100%;
}			
.main .tu3{
	width:16.0rem;
	height:2.048rem;
}	
.main .tu3 img{
	width:100%;
	height:100%;
}			
.main .t1000{
	width:16.0rem;
	height:14.464rem;
}			
.main .t1000 img{
	width:50%;
	border:1px solid #f2f2f2;
}
.main .t10{
	width: 16.0rem;
	height:8.789333rem;
}
.main .t10 img{
	width:100%;
	border:1px solid #f2f2f2;
}
.main .t1001{
	width:16.0rem;
	height:12.501333rem;
}			
.main .t1001 img{
	width:50%;
	border:1px solid #f2f2f2;
}
.main .t11{
	width:16.0rem;
	height:1.877333rem;
}
.main .t11 img{
	width:50%;
	height:1.92rem;
	border:1px solid #f2f2f2;
}
.main .input{
	text-align: center;
    padding: 6em 3.2rem;
    margin-bottom: 2px;

}
.main .input input{
	width:4.053333rem;
	height:1.152rem;
	background: #fff;
	color: #4c4c4c;
	margin-left: 5%;
	text-align: center;
	font-size:0.426667rem;
}

.main .box{
	width:11.477333rem;
	height:3.968rem;
	border-top:1px solid #000;
	border-bottom:1px solid #000;
	margin-left: 13%;
}
.main .box img{
	width:1.792rem;
	height:2.688rem;
	margin-right: 4%;
    margin-left: 5%;
    margin-top: 7%;
}
.main p{
	display: block;
	width: 16.0rem;
	height:1.024rem;
	line-height: 1.024rem;
	text-align: center;
	font-size: 0.426667rem;
	color:#4c4c4c;

}

.footer{
	width:16.0rem;
	height:2.218667rem;
	border-top: 1px solid #999;
    background-color: #fff;
   
    display:flex;
    justify-content: space-around;


}
.footer span{
	display: block;
	width:75px;
	height:51px;
	background:url(../images/5.png) no-repeat center center;
	background-size: 1.536rem 20.48rem;
	
}

.footer span:nth-child(1){
	background-position: 0.810667rem -10.069333rem;
}
.footer span:nth-child(2){
	background-position: 0.810667rem -1.877333rem;
}
.footer span:nth-child(3){
	background-position: 0.810667rem -3.925333rem;
}
.footer span:nth-child(4){
	background-position: 0.810667rem -6.016rem;
}
.footer span:nth-child(5){
	background-position:0.810667rem -8.064rem;
}




